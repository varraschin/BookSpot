<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">
    let mensagemErro = '';
    $(".validation-summary-errors ul li").each(function () {
        mensagemErro += $(this).text() + '<br/>';
    });
    if (mensagemErro != '')
        swal.fire(
            'Ocorreu um Problema!',
            mensagemErro,
            'error'
        );
</script>
